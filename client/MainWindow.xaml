<Window x:Class="QuickLink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickLink"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="QuickLink" Height="100" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBox Name="TextBox_Url" Grid.Column="0" Width="300" IsEnabled="False" Text="Uploading..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" />
        <Button Name="Button_Finish" Grid.Column="1" Content="Finish" Margin="10 20" IsEnabled="False" Click="Button_Finish_Click" />
    </Grid>
</Window>
